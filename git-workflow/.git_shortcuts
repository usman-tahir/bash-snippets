
#-- Git basics --#

# Git diff
# Invoke on the filename to perform the diff on
alias gd="git diff"

# Git checkout
alias gco="git checkout"

# Git status
alias gs="git status"

# Git branch (current branches)
alias gb="git branch"

# Git remote branches
alias grb="git branch -a"

# Pull and prune unneeded remote branches
# Pull, and then prune remote branches which have been deleted
alias gpp="git pull && git fetch --prune"

# Create a new git branch and switch into it
# Invoke on the branch to create and switch into
alias gcb="git checkout -b"

# Delete a git branch
# Invoke on the branch to delete
alias gdb="git branch -D"

# Add all files to a commit
alias gaa="git add ."

# Git commit with a message from the command line (typed)
# Rationale: "Git Quick Commit" followed by commit message
alias gqc="git commit -m"

# Git commit with a message within the default CLI editor
# Rationale: "Git Editor Commit" which opens the default editor
alias gec="git commit"

# Basic git push
# Rationale: "Git Outgoing"; Sends the commit to remote
alias go="git push"

# Basic git pull
# Rationale: "Git Incoming"; Receives the commits/status from remote
alias gi="git pull"

# Git push after setting the upstream repository
# Rationale: "Git Push Upstream"; Sets the upstream repository when necessary
alias gpu="git push --set-upsteam origin"

#-- Inspecting the git log --#

# One line (just basic log info; no author or date info)
alias glo="git log --oneline"

# More verbose info
alias gl="git log"
